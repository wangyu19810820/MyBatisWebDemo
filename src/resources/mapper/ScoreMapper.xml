<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ScoreMapper">

    <insert id="insertScore" useGeneratedKeys="true" keyProperty="id">
        insert into SCORE (NAME, SCORE, USERID) values (#{name}, #{score}, #{user.id})
    </insert>

    <select id="selectScoreByUserId" resultType="com.model.Score">
        select ID, NAME, SCORE from SCORE
        <where>
            <if test="_parameter != null">
                USERID = #{_parameter}
            </if>
        </where>
    </select>

</mapper>